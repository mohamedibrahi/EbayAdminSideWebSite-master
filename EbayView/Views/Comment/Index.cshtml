@model IEnumerable<EbayView.Models.ViewModel.Comments.GetCommentOutputModel>

<h1 style="width:100%;text-align:center;display:block;margin:10px auto;">View All Comment </h1>
 
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th> 
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @{  int i = 1;}
@foreach (var item in Model) {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName) 
                @Html.ActionLink("View All", "FilterByUserId", new { UserId=item.UserId },new {@class="btn btn-primary m-3"})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
                @Html.ActionLink("View All", "FilterByProdId", new {ProdId=item.ProductId },new {@class="btn btn-primary m-3"})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new { UserId=item.UserId,  ProdId=item.ProductId },new {@class="btn btn-primary"})
            </td>
                @{  i++;}
        </tr>
}
    </tbody>
</table>
