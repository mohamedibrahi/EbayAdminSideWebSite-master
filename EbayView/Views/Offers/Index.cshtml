@model IEnumerable<EbayView.Models.ViewModel.Offers.GetOfferOutputModel>

<h1> View All Offers </h1>
<p class="w-100 text-center">
    <a asp-action="Create" class="btn btn-primary">Create New Offer</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewPrice)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Precentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{int i=1;}
@foreach (var item in Model) {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precentage) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
             <td> 
                <a asp-action="Edit" asp-route-id="@item.OfferId" class="btn btn-primary">Edit</a>
            </td> 
            <td> 
                <a asp-action="Delete" asp-route-id="@item.OfferId" class="btn btn-primary">Delete</a>
            </td>
            @{i++ ;}
        </tr>
}
    </tbody>
</table>
