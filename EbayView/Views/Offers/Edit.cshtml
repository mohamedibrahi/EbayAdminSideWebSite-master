@model EbayView.Models.ViewModel.Offers.CreateOffersInputModel

<h4> Edite Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OfferId" value="@ViewBag.selectoffer.OfferId" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"> Product Name</label>
                <input asp-for="ProductId"  class="form-control" value="@ViewBag.selectoffer.ProductId" hidden readonly/> 
                <input class="form-control" value="@ViewBag.selectoffer.ProductName" readonly/> 
                <span asp-validation-for="ProductId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label">Admin Name</label>
                <input asp-for="AdminId" class="form-control"readonly hidden value="@ViewBag.selectoffer.AdminId"/> 
                <input type="text" class="form-control" readonly value="@ViewBag.selectoffer.AdminName"/> 
                <span asp-validation-for="AdminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPrice" class="control-label"></label>
                <input asp-for="NewPrice" class="form-control" value="@ViewBag.selectoffer.NewPrice"/>
                <span asp-validation-for="NewPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldPrice" class="control-label"></label>
                <input asp-for="OldPrice" class="form-control" value="@ViewBag.selectoffer.OldPrice" readonly/>
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precentage" class="control-label">Precentage in %</label>
                <input asp-for="Precentage" class="form-control" value="@ViewBag.selectoffer.Precentage" />
                <span asp-validation-for="Precentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" value="@ViewBag.selectoffer.StartDate"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" value="@ViewBag.selectoffer.EndDate" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-primary" >Back to List</a>
            </div>
        </form>
    </div>
</div>


 
