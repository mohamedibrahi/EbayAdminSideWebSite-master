<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:600" /> 
	<link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
	@if (ViewBag.errormsg!= null)
	{
		<div class="w-100 text-center">
				<h1 class="btn btn-danger">@ViewBag.errormsg</h1>
		</div>
	}
    <div class="login-wrap" style="display:block;margin:30px auto">
		<div class="login-html">
			<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
			<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
			<div class="login-form">
				<div class="sign-in-htm">
					<form id="SignIndata">
							<div class="group">
								<label for="UserNamein" class="label">Username</label>
								<input id="UserNamein" name="UserNamein" type="text" class="input">
							</div>
							<div class="group">
								<label for="Passwordin" class="label">Password</label>
								<input id="Passwordin" name="Passwordin" type="password" class="input" data-type="password">
							</div>
							<div class="group">
								<input id="checkin" type="checkbox" class="check" checked>
								<label for="checkin"><span class="icon"></span> Keep me Signed in</label>
							</div>
							<div class="group">
								<input type="submit" class="button SignIn" value="Sign In">
							</div>
					</form>
					<div class="hr"></div>
					@*<div class="foot-lnk">
						<a href="#forgot">Forgot Password?s</a>
					</div>*@
				</div>
				<div class="sign-up-htm">
					<form id="SignUpdata">
						   <div class="group">
								<label for="userup" class="label">Username</label>
								<input id="UserNameup" name="UserNameup" type="text" class="input">
							</div>
							<div class="group">
								<label for="FistName" class="label">FistName</label>
								<input id="FistName" name="FistName" type="text" class="input">
							</div>  
							<div class="group">
								<label for="LastName" class="label">LastName</label>
								<input id="LastName" name="LastName" type="text" class="input">
							</div>
							<div class="group">
								<label for="Passwordup" class="label">Password</label>
								<input id="Passwordup" type="Password" name="Passwordup" class="input" data-type="password">
							</div>
							<div class="group">
								<label for="rePasswordup" class="label">Repeat Password</label>
								<input id="rePasswordup" type="password" class="input" data-type="password">
							</div>
							<div class="group">
								<label for="Emailup" class="label">Email Address</label>
								<input id="Emailup" name="Emailup" type="email" class="input">
							</div>
							<div class="group">
								<input type="submit" class="button SignUp" value="Sign Up">
							</div>
					</form>
					<div class="hr"></div>
					<div class="foot-lnk">
						@*<label for="tab-1">Already Member?</label>*@
					</div>
				</div>
			</div>
		</div>
	</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/login.js"></script>
<script> 
</script>
</body>
</html>
