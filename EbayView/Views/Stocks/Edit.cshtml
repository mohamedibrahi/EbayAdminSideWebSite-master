@model EbayView.Models.ViewModel.Stocks.CreateStockInputModel

<h4> Edit Stock</h4>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockId" value="@ViewBag.selectedStock.StockId"/>
            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                <input asp-for="StockName" class="form-control" value="@ViewBag.selectedStock.StockName" />
                <span asp-validation-for="StockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockAddress" class="control-label"></label>
                <input asp-for="StockAddress" class="form-control" value="@ViewBag.selectedStock.StockAddress"/>
                <span asp-validation-for="StockAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


 
