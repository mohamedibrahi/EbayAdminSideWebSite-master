@model EbayView.Models.ViewModel.Account.SignupVM

@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
} 
@*<h1>Signup</h1> *@
<div class="signup-box"  style="width:500px" >
    <div class="logo">
        <a href="javascript:void(0);">Signup to Admin DashBorad</a>
@*        <small>Admin BootStrap Based - Material Design</small>*@ 
   </div>
     <div class="card" style="width:350px;margin:auto">
        <div class="body">
            <form id="sign_up" method="POST" asp-controller="Account" asp-action="Signup">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="msg btn btn-primary text-center" style="width:100%;color:white;font-size:17px">Register a new membership</div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">account_circle</i>
                    </span> 
                    <div class="form-line">
                        <input type="text" class="form-control" asp-for="UserName" placeholder="enter UserName" autofocus />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">email</i>
                    </span>
                    <div class="form-line">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email Address" autofocus />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                         <i class="material-icons">account_box</i>
                    </span>
                    <div class="form-line">
                        <input type="text" class="form-control" asp-for="FistName" placeholder="enter FistName" autofocus />
                    </div>
                    <span asp-validation-for="FistName" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                     <i class="material-icons">account_box</i>
                    </span>
                    <div class="form-line">
                        <input type="text" class="form-control" asp-for="LastName" placeholder="enter LastName" autofocus />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="IsAgree" id="terms" class="filled-in chk-col-pink">
                    <label for="terms">I read and agree to the <a href="javascript:void(0);">terms of usage</a>.</label>
                </div>

                @*<button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">SIGN UP</button>*@

                <input type="submit" value="SIGN UP" class="btn btn-block btn-lg bg-pink waves-effect" />

                <div class="m-t-25 m-b--5 align-center">
                    <a asp-controller="Account" asp-action="Signin">You already have a membership?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section pageScript {

     <!-- Jquery Core Js -->
        @*<script src="~/plugins/jquery/jquery.min.js"></script>*@
        <script src="~/js/jquery.min.js"></script>
        <!-- Validation Plugin Js -->
        @*<script src="~/plugins/jquery-validation/jquery.validate.js"></script>*@
        <script src="~/js/jquery.validate.js"></script>
        @*<script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
        <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
        <!-- Bootstrap Core Js  -->
        @*<script src="~/plugins/bootstrap/js/bootstrap.js"></script>*@
        <script src="~/js/bootstrap.js"></script>
        <!-- Waves Effect Plugin Js -->
        @*<script src="~/plugins/node-waves/waves.js"></script>*@
        <script src="~/js/waves.js"></script>
        <!-- Custom Js -->
        <script src="~/js/admin.js"></script>


    <!-- pageScript Js -->
    <script src="~/js/sign-up.js"></script>
}



