@model EbayView.Models.ViewModel.Account.SigninVM

@{
    ViewData["Title"] = "Signin";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

@*<h1>Signin</h1> *@ 
<div class="login-box" style="width:500px"> 
    <div class="logo">
            <a href="javascript:void(0);" style="font-size:34px">Signin to Admin DashBorad</a>
            @*        <small>Admin BootStrap Based - Material Design</small>*@    
    </div>
    <div class="card" style="width:350px;margin:auto">
        <div class="body">
            <form id="sign_in" method="POST" asp-controller="Account" asp-action="Signin">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="msg btn btn-primary text-center" style="width:100%;color:white;font-size:17px">Sign in to start your session</div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">email</i>
                    </span>
                    <div class="form-line">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email Address" autofocus />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                   <div class="col-xs-8 p-t-5">
                       @* 
                        <input type="checkbox" asp-for="RememberMe" id="RememberMe" hidden class="filled-in chk-col-pink">
                        <label for="RememberMe" hidden>Remember Me</label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                        *@
                    </div> 
                    <div class="col-xs-4">
@*                         <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button> 
*@                        <input type="submit" value="SIGN IN" class="btn btn-block btn-lg bg-pink waves-effect" />
                    </div>
                </div>
                <div class="row m-t-15 m-b--20">
                    <div class="col-xs-6">
                        <a asp-controller="Account" asp-action="Signup">Register Now!</a>
                    </div>
                    <div class="col-xs-6 align-right">
                        @*<a asp-controller="Account" asp-action="ForgetPassword">Forgot Password?</a>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section pageScript {

     <!-- Jquery Core Js -->
        @*<script src="~/plugins/jquery/jquery.min.js"></script>*@
        <script src="~/js/jquery.min.js"></script>
        <!-- Validation Plugin Js -->
        @*<script src="~/plugins/jquery-validation/jquery.validate.js"></script>*@
        <script src="~/js/jquery.validate.js"></script>
        @*<script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
        <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
        <!-- Bootstrap Core Js  -->
        @*<script src="~/plugins/bootstrap/js/bootstrap.js"></script>*@
        <script src="~/js/bootstrap.js"></script>
        <!-- Waves Effect Plugin Js -->
        @*<script src="~/plugins/node-waves/waves.js"></script>*@
        <script src="~/js/waves.js"></script>
        <!-- Custom Js -->
        <script src="~/js/admin.js"></script>


    <!-- pageScript Js -->
    <script src="~/js/sign-in.js"></script>
}


